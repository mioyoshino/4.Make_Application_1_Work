<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show' , book_path(book.id) %></td>
        <td><%= link_to 'Edit' , edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy' , book_path(book.id) %></td>
    </tr>
    <% end %>
    </tbody>
</table>
<h2>New book</h2>

<%= form_for(@book, url: books_path) do |f| %>

    <div>Title</div>
    <%= f.text_field :title %>

    <div>Body</div>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %> 
